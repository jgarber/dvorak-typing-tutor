#lesson_box.lesson_box
  %p.previous
  %p.current
  %p.next
#timer.timer
  00:00
#words_per_minute.words_per_minute
#input_box.input_box
#keyboard.keyboard
  -# first row
  - 13.times do |num|
    .key.square{ id: "key_#{num}" }
      %p.lower
      %p.upper

  .square.delete 
    %p delete

  -# second row
  .square.tab.clear 
    %p tab
  - (13..25).each do |num|
    .key.square{ id: "key_#{num}" }
      %p.lower
      %p.upper

  -# home row
  .square.caps
    %p caps lock
  - (26..36).each do |num|
    .key.square{ id: "key_#{num}" }
      %p.lower
      %p.upper

  .square.return
    %p return

  -# third row
  .square.shift.left
    %p shift
  - (37..46).each do |num|
    .key.square{ id: "key_#{num}" }
      %p.lower
      %p.upper

  .square.shift.right
    %p shift

  -# bottom row
  .bottom.fn
    %p fn
  .bottom.fn
  .bottom.fn
  .bottom.super
  .bottom.space
  .bottom.super
  .bottom.fn
  .bottom.arrows
    .key.arrow.up
      %p ˄
    .key.clear.arrow.left
      %p ˂
    .key.clear.arrow.down
      %p ˅
    .key.clear.arrow.right
      %p ˃

= render 'lesson'
